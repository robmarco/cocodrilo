upstream puma {
  server unix:///home/deployer/apps/<%= app_name.parameterize %>/shared/tmp/sockets/<%= app_name.parameterize %>-puma.sock;
}

server {
  listen 80 default_server deferred;
  # server_name <%= app_name.parameterize %>.com;

  root /home/deployer/apps/<%= app_name.parameterize %>/current/public;
  access_log /home/deployer/apps/<%= app_name.parameterize %>/current/log/nginx.access.log;
  error_log /home/deployer/apps/<%= app_name.parameterize %>/current/log/nginx.error.log info;

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  try_files $uri/index.html $uri @puma;
  location @puma {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_pass http://puma;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 10M;
  keepalive_timeout 10;
}
